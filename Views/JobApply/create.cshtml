@model EFCoreFinalApp.Data.JobApply

<h1>Job Application</h1>

@if (Model.JobPosting != null)
{
    <h2>Job Title: @Model.JobPosting.Title</h2>
    <p>@Model.JobPosting.Description</p>
    <p><strong>Location:</strong> @Model.JobPosting.Location</p>
    <p><strong>Salary:</strong> @Model.JobPosting.Salary</p>
    <p><strong>Posted Date:</strong> @Model.JobPosting.PostedDate.ToShortDateString()</p>
    <p><strong>Closing Date:</strong> @Model.JobPosting.ClosingDate.ToShortDateString()</p>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="candidate">Select Candidate:</label>
        <select asp-for="CandidatesId" class="form-control" required>
            @foreach (var candidate in ViewBag.Candidates)
            {
                <option value="@candidate.Id">@candidate.Name</option>
            }
        </select>
    </div>
    <input type="hidden" asp-for="JobPostingId" value="@Model.JobPostingId" required/>
    <button type="submit" class="btn btn-primary">Apply</button>
</form>


